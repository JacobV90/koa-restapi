{
  "name": "koa-restapi",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:JacobV90/koa-restapi.git",
  "author": "Jacob Veal <jacobveal90@gmail.com>",
  "license": "MIT",
  "scripts": {
    "docs": "typedoc --options ./typedoc.js",
    "test": "nyc mocha test/*.spec.ts",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "build": "tsc",
    "lint": "tslint ./src/**/*.ts ./test/**/*.spec.ts",
    "parse": "ts-node ./src/api-parser.ts ./test/basic-crud/create_user_api.ts",
    "file": "ts-node ./src/file-creater.ts"
  },
  "dependencies": {
    "@types/koa-mount": "^3.0.1",
    "glob-fs": "^0.1.7",
    "koa": "^2.5.2",
    "koa-compose": "^4.1.0",
    "koa-mount": "^3.0.0",
    "koa-router": "^7.4.0",
    "typescript-json-schema": "^0.32.0",
    "typescript-parser": "^2.5.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/chance": "^1.0.1",
    "@types/http-errors": "^1.6.1",
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^5.0.1",
    "@types/koa-router": "^7.0.31",
    "@types/mocha": "^5.2.5",
    "@types/sinon": "^5.0.1",
    "@types/supertest": "^2.0.5",
    "chai": "^4.1.2",
    "chance": "^1.0.16",
    "coveralls": "^3.0.2",
    "koa-bodyparser": "^4.2.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.3",
    "nyc": "^12.0.2",
    "sinon": "^6.1.5",
    "supertest": "^3.1.0",
    "ts-file-parser": "^0.0.12",
    "ts-node": "^7.0.1",
    "ts-structure-parser": "^0.0.17",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.10.0",
    "typedoc": "^0.12.0",
    "typescript": "^3.0.1"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "dist"
    ],
    "extension": [
      ".js",
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
